    <!-- main content -->
    <main class="main">
        <div class="container-fluid">
            <div class="row">
                <!-- main title -->
                <div class="col-12">
                    <div class="main__title">
                        <h2>Add new Movie</h2>
                    </div>
                </div>
                <!-- end main title -->

                <!-- form -->
                <div class="col-12">
                    <form action="/admin/editmovie" enctype="multipart/form-data" method="post" class="form">
                        <input type="hidden" value="<%=record.id%>" name="editid">
                        <div class="row">
                            <div class="col-12 col-md-5 form__cover">
                                <div class="row">
                                    <div class="col-12 col-sm-6 col-md-12">
                                        <div class="form__img">
                                            <label for="form__img-upload">Upload Poster (190 x 270)</label>
                                            <input id="form__img-upload" name="poster" type="file">
                                            <img id="form__img" src="#" alt=" ">
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-12 col-md-7 form__content">
                            
                                    <div class="col-12">
                                        <div class="form__group">
                                            <input type="text" name="title" value="<%=record.title %>" class="form__input">
                                        </div>
                                    </div>

                                    <div class="col-12">
                                        <div class="form__group">
                                            <textarea id="text"  name="text" class="form__textarea"><%=record.text %></textarea>
                                        </div>
                                    </div>

                                    <div class="col-12 col-sm-6 col-lg-3">
                                        <div class="form__group">
                                            <input type="text" name="year" class="form__input"  value="<%=record.year %>">
                                        </div>
                                    </div>

                                    <div class="col-12 col-sm-6 col-lg-3">
                                        <div class="form__group">
                                            <input type="text" name="type" class="form__input"
                                            value="<%=record.type %>">
                                        </div>
                                    </div>

                                    <div class="col-12 col-sm-6 col-lg-3">

                                        <div class="form__group">
                                            <select name="quelity" class="form__input">
                                                <option value="HD">HD</option>
                                                <option value="FULLHD">FULL HD</option>
                                            </select>
                                        </div>
                                    </div>

                                  
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="row">
                                    <div class="col-12">
                                        <button type="submit" class="form__btn">publish</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <!-- end form -->
            </div>
        </div>
    </main>
    <!-- end main content -->

    <!-- JS -->
